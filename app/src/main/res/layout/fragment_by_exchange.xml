<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".fragments.byexchanges.ByExchangeFragment">


        <TextView
                android:text="Selecione um criptomoeda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView2"
                android:textSize="20dp" android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/spinnerCriptoMoedaByExchangesFragment"
                app:layout_constraintVertical_chainStyle="packed" android:layout_marginTop="70dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="15dp"
                app:layout_constraintVertical_bias="0.48000002"/>
        <TextView
                android:text="Valor Entrada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/spinnerExchangeVendaByExchangesFragment"
                app:layout_constraintBottom_toTopOf="@+id/valorEntradaByExchangesFragment" android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="@+id/spinnerExchangeVendaByExchangesFragment"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/valorEntradaByExchangesFragment"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                app:layout_constraintBottom_toTopOf="@+id/btnAnalisarByExchange"
                app:layout_constraintStart_toStartOf="@+id/textView3" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp"/>
        <Button
                android:text="Analisar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnAnalisarByExchange"
                app:layout_constraintTop_toBottomOf="@+id/valorEntradaByExchangesFragment"
                app:layout_constraintBottom_toTopOf="@+id/view760" android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="@+id/valorEntradaByExchangesFragment"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"/>

        <View
                android:id="@+id/view760"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#130F0F"
                app:layout_constraintTop_toBottomOf="@+id/btnAnalisarByExchange"
                app:layout_constraintBottom_toTopOf="@+id/cardViewResultadoByExchange"/>
        <Spinner
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:id="@+id/spinnerCriptoMoedaByExchangesFragment"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                app:layout_constraintBottom_toTopOf="@+id/textView4"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                android:layout_marginEnd="20dp" app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.cardview.widget.CardView android:layout_width="match_parent"
                                           android:layout_height="wrap_content"
                                           android:id="@+id/cardViewResultadoByExchange"
                                           android:visibility="invisible"
                                           app:layout_constraintBottom_toBottomOf="parent"
                                           app:layout_constraintTop_toBottomOf="@+id/view760"
                                           android:layout_marginTop="30dp" app:layout_constraintStart_toStartOf="parent"
                                           app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="10dp"
                                           android:layout_marginEnd="10dp" android:layout_marginBottom="30dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                <TextView
                        android:text="Resultado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView7"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:textSize="20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="15dp"
                        app:layout_constraintBottom_toTopOf="@+id/textView8"
                        app:layout_constraintVertical_chainStyle="packed"
                        app:layout_constraintVertical_bias="0.120000005"/>


                <TextView
                        android:text="CriptoMoeda Selecionada"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView8" android:textStyle="bold"
                        android:layout_marginTop="20dp"
                        app:layout_constraintStart_toStartOf="@+id/textView7"
                        android:layout_marginStart="15dp" app:layout_constraintTop_toBottomOf="@+id/textView7"
                        app:layout_constraintBottom_toTopOf="@+id/textView30"/>
                <TextView
                        android:text="Exchange Compra"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView30"
                        app:layout_constraintTop_toBottomOf="@+id/textView8"
                        app:layout_constraintBottom_toTopOf="@+id/textView32" android:layout_marginTop="20dp"
                        app:layout_constraintStart_toStartOf="@+id/textView8" android:layout_marginStart="15dp"
                        android:textStyle="bold"/>
                <TextView
                        android:text="Preço Compra"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView32"
                        app:layout_constraintTop_toBottomOf="@+id/textView30"
                        app:layout_constraintBottom_toTopOf="@+id/textView33"
                        app:layout_constraintStart_toStartOf="@+id/textView30" android:textStyle="bold"/>
                <TextView
                        android:text="Exchange Venda"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView33"
                        app:layout_constraintTop_toBottomOf="@+id/textView32"
                        app:layout_constraintBottom_toTopOf="@+id/textView34" android:layout_marginTop="15dp"
                        app:layout_constraintStart_toStartOf="@+id/textView32" android:textStyle="bold"/>
                <TextView
                        android:text="Preço Venda"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView34"
                        app:layout_constraintTop_toBottomOf="@+id/textView33"
                        app:layout_constraintBottom_toTopOf="@+id/textView36"
                        app:layout_constraintStart_toStartOf="@+id/textView33" android:textStyle="bold"/>
                <TextView
                        android:text="Quantidade Criptomoeda"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView36"
                        app:layout_constraintTop_toBottomOf="@+id/textView34"
                        app:layout_constraintBottom_toTopOf="@+id/textView37" android:layout_marginTop="15dp"
                        app:layout_constraintStart_toStartOf="@+id/textView34" android:textStyle="bold"/>
                <TextView
                        android:text="Total Taxa em R$"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView37"
                        app:layout_constraintTop_toBottomOf="@+id/textView36"
                        app:layout_constraintBottom_toTopOf="@+id/textView38"
                        app:layout_constraintStart_toStartOf="@+id/textView36" android:textStyle="bold"/>
                <TextView
                        android:text="Valor Lucro Bruto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView38"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView37"
                        app:layout_constraintStart_toStartOf="@+id/textView37" android:textStyle="bold"
                        android:layout_marginBottom="40dp"/>
                <TextView
                        android:text="Bitcoin Cash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/criptoMoedaSelecionadaByExchangesFragment" android:textSize="12sp"
                        android:layout_marginStart="10dp"
                        app:layout_constraintStart_toEndOf="@+id/textView8"
                        app:layout_constraintBottom_toBottomOf="@+id/textView8"
                        app:layout_constraintTop_toTopOf="@+id/textView8"/>
                <TextView
                        android:text="Mercado Bitcoin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/exchangeCompraByExchangesFragment" android:textSize="12sp"
                        android:layout_marginStart="10dp"
                        app:layout_constraintStart_toEndOf="@+id/textView30"
                        app:layout_constraintBottom_toBottomOf="@+id/textView30"
                />
                <TextView
                        android:text="R$ 1000,00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="@+id/exchangeCompraByExchangesFragment"
                        android:id="@+id/precoCompraByExchangesFragment" android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="@+id/textView32"
                        app:layout_constraintTop_toBottomOf="@+id/textView30"/>
                <TextView
                        android:text="Novadax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/exchangeVendaByExchangesFragment" android:textSize="12sp"
                        android:layout_marginStart="10dp"
                        app:layout_constraintStart_toEndOf="@+id/textView33"
                        app:layout_constraintBottom_toBottomOf="@+id/textView33"
                />
                <TextView
                        android:text="R$ 1600,00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/precoVendaByExchangesFragment" android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="@+id/textView34"
                        app:layout_constraintStart_toStartOf="@+id/exchangeVendaByExchangesFragment"/>
                <TextView
                        android:text="15,6892"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/quantidadeCriptomoedaByExchangesFragment" android:textSize="12sp"
                        android:layout_marginStart="10dp"
                        app:layout_constraintStart_toEndOf="@+id/textView36"
                        app:layout_constraintBottom_toBottomOf="@+id/textView36"
                />
                <TextView
                        android:text="R$ 12,00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/totalTaxasByExchangesFragment" android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="@+id/quantidadeCriptomoedaByExchangesFragment"
                        app:layout_constraintBottom_toTopOf="@+id/textView38"/>
                <TextView
                        android:text="R$ 550,00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/valorLucroBrutoByExchangesFragment" android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="@+id/totalTaxasByExchangesFragment"
                        app:layout_constraintBottom_toBottomOf="@+id/textView38"/>
                <ProgressBar
                        style="?android:attr/progressBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" android:id="@+id/progressBarByExchangesFragment"
                        android:layout_marginTop="3dp"
                        app:layout_constraintTop_toBottomOf="@+id/exchangeCompraByExchangesFragment"
                        android:visibility="visible"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
        <TextView
                android:text="Selecione Exechange Compra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4" android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/spinnerCriptoMoedaByExchangesFragment"
                app:layout_constraintBottom_toTopOf="@+id/spinnerExchangeCompraByExchangesFragment"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="@+id/spinnerCriptoMoedaByExchangesFragment"/>
        <Spinner
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:id="@+id/spinnerExchangeCompraByExchangesFragment"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                app:layout_constraintBottom_toTopOf="@+id/textView9"
                app:layout_constraintStart_toStartOf="@+id/textView4"
                android:layout_marginEnd="20dp" app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:text="Selecione Exchange Venda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView9" android:textSize="20dp" android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/spinnerExchangeCompraByExchangesFragment"
                app:layout_constraintBottom_toTopOf="@+id/spinnerExchangeVendaByExchangesFragment"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="@+id/spinnerExchangeCompraByExchangesFragment"/>
        <Spinner
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:id="@+id/spinnerExchangeVendaByExchangesFragment"
                app:layout_constraintTop_toBottomOf="@+id/textView9"
                app:layout_constraintBottom_toTopOf="@+id/textView3"
                app:layout_constraintStart_toStartOf="@+id/textView9"
                android:layout_marginEnd="20dp" app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>
